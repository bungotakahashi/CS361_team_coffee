
<h1><%=@camp.name%></h1>
<%= button_to :add_outbreaks, home_outbreak_new_path, params: {campid: @camp.id}, :method=>:get, :class => "btn"%>
<%= button_to :add_food, home_food_new_path, params: {campid: @camp.id}, :method=>:get, :class => "btn"%>
<%= button_to :add_medicine, home_medicine_new_path,params:{campid: @camp.id}, :method=>:get, :class => "btn"%>
<div class="outer">
<div class="inner", id="outbreak_table">
<%if @outbreak!=nil%>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Outbreaks</th>
    </tr>
  </thead>
  <tbody>
      <% @outbreak.each do |outbreak| %>
    	<tr>
			<td><%=outbreak.name%></td>
		  </tr>
      <% end %>
   </tbody>
</table>
<%end%>
</div>
<div class="inner",id="food_table">
<%if @food!=nil%>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Food</th>
    </tr>
  </thead>
  <tbody>
      <% @food.each do |food| %>
    	<tr>
			<td><%=food.name%></td>
		  </tr>
      <% end %>
   </tbody>
</table>
<%end%>
</div>

<div class="inner",id="medicine_table">
<%if @medicine!=nil%>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Medicine</th>
    </tr>
  </thead>
  <tbody>
      <% @medicine.each do |medicine| %>
    	<tr>
			<td><%=medicine.name%></td>
		  </tr>
      <% end %>
   </tbody>
</table>
<%end%>
</div>
</div>
<%= button_to "Back", home_camp_path, :method => "get", :class => "btn", :id =>"btn_bottom" %>